# .env file for Portainer Agent with Tailscale Proxy

# Name prefix for containers and volumes created by this stack
STACK_NAME=portainer

# Optional: publish the Portainer Agent on host/LAN (defaults to 9001)
# Set a custom host port if needed; leave unset to use default
PUBLIC_PORT=9001

# Set the hostname for this Tailscale instance
TS_HOSTNAME=portainer-agent

# Tailscale authentication key (replace with your own)
# You can obtain a new auth key from the Tailscale admin panel:
# https://login.tailscale.com/admin/settings/authkeys
TS_AUTHKEY=tskey-client-xxxxxxxxxxxxxxxxxxxxxx

